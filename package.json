{
    "name": "moten",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "packageManager": "pnpm@9.4.0",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "in": "pnpm i -r",
        "ui": "pnpm -F @moten/ui dev",
        "ui:build": "pnpm -F @moten/ui build",
        "clear": "rimraf --glob ./node_modules ./packages/**/node_modules ./packages/**/dist",
        "play:vue3": "pnpm -F @moten/ui build:vue3 && pnpm -F @moten/playground-vue3 dev",
        "play:vue2": "pnpm -F @moten/ui build:vue2 && pnpm -F @moten/playground-vue2 serve",
        "prepare": "husky",
        "commit": "cz",
        "lint": "node scripts/lint.js"
    },
    "lint-staged": {
        "*.{js,ts,vue}": "pnpm lint"
    },
    "config": {
        "commitizen": {
            "path": "cz-vinyl"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "pnpm": {
        "packageExtensions": {
            "vue-template-compiler": {
                "devDependencies": {
                    "vue": "^2.7.16"
                }
            },
            "vue-template-compiler@2.7.16": {
                "devDependencies": {
                    "vue": "^2.7.16"
                }
            }
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "commitizen": "^4.3.0",
        "cz-vinyl": "^2.5.1",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.7",
        "rimraf": "^5.0.8"
    }
}